        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dance"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Dance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterStep1Activity" />
        <activity android:name=".RegisterStep2Activity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".PlaylistsActivity" />
        <activity android:name=".PlayerActivity" />
        <activity android:name=".PlaylistDetailsActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".ProfileActivity" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />


</manifest>